
@{
    ViewData["Title"] = "Add";
}
@model Product

<h1>Ürün Ekle</h1>
<form asp-controller="Products" asp-action="SaveProduct" method="post" >
    
    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Adı: </label>
        <input class="form-control" asp-for="Name">

    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Fiyatı: </label>
        <input class="form-control" asp-for="Price">

    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Stoğu: </label>
        <input class="form-control" asp-for="Stock">

    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Rengi: </label>
        <input class="form-control" asp-for="Color">

    </div>

   <div class="form-check">
  <input class="form-check-input" asp-for="furniture">
  <label class="form-check-label" for="flexCheckDefault">
   Ev Eşyası mı?
  </label>

</div>


    <div class="mb-3 mt-3"><span>Ne Kadar Satışta Kalsın?</span>
    @foreach(var item in ViewBag.Expire as Dictionary<string, int>)
    {
        
        <div class="form-check">
            
            <input class="form-check-input" type="radio" asp-for="Expire" value="@item.Value">
            <label class="form-check-label" for="flexCheckDefault">
                @item.Key
            </label>
        </div>
    }

  
    </div>

    <button type="submit" class="btn btn-success">Ürün Ekle</button>

</form>
